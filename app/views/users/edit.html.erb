<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">  
      <br><br><br>

      <%= form_for @user do |f| %>

<!-- Title -->
<div class="text-center mb-4">
    <h3>Profil</h3>
    <p>Remplissez le formulaire pour compléter votre profil</p>
</div>
<!-- End Title -->
    
<!-- Formulaire -->

            <div class="form-group">
                <%= f.label :first_name, 'Votre Prénom' %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
            </div>    

            <div class="form-group">
                <%= f.label :last_name, 'Votre Nom' %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
            </div>    

            <div class="form-group">
          <%= f.label :description, 'Votre description : ' %>
          <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
        </div>

            <!-- création avatar  -->
        
        <div class= "form-group">
          <%= f.label :avatar, 'Ajoute un avatar : ' %>
          <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar", class: "form-control" %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Publier votre profil", class: "btn btn-lg btn-primary btn-block" %>
        </div>

        <% end %>    
        </div>
    </div>
</div>  
